---
const svgPattern = `
  <svg width="10" height="10" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
    <circle cx="2" cy="2" r="0.5" fill="currentColor"/>
    <circle cx="2" cy="7" r="0.5" fill="currentColor"/>
    <circle cx="7" cy="2" r="0.5" fill="currentColor"/>
    <circle cx="7" cy="7" r="0.5" fill="currentColor"/>
  </svg>
`;

const encodedPattern = btoa(svgPattern);
---

<div class="relative inline-block">
  <a
    class="bg-renzo-500 border-4 border-black px-6 py-2 flex items-center gap-x-2
    font-webcomic text-black text-xl uppercase tracking-tight
    hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none
    transition-all"
    style={{
      backgroundImage: `url("data:image/svg+xml;base64,${encodedPattern}")`,
      backgroundSize: '10px 10px'
    }}
    {...Astro.props}
    target="_blank"
    rel="noopener noreferrer"
  >
    <slot />
  </a>
  <div class="absolute inset-0 border-4 border-black transform translate-x-1 translate-y-1 -z-10"></div>
</div>
