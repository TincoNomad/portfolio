---
import Badge from "../components/ui/badges/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import SocialPill from "../components/ui/buttons/SocialPill.astro";
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 text-black">
  <!-- Avatar Box - Full height -->
  <div class="md:col-span-1 h-full bg-white rounded-xl border-4 border-black p-4">
    <img 
      class="w-full h-full object-cover rounded-lg" 
      src="/avatar500x500.png" 
      alt="my photo" 
    />
  </div>

  <!-- Right Column - 2 rows -->
  <div class="md:col-span-2 grid grid-rows-2 gap-4">
    <!-- Greeting Box -->
    <div class="h-full" style={{
      backgroundImage: "url('/TextBubble.svg')",
      backgroundSize: "463px 311px", // Matches SVG viewBox dimensions
      backgroundRepeat: "no-repeat",
      padding: "2rem",
      width: "463px",
      height: "311px"
    }}>
      <h1 class="text-4xl font-bold">Hi, I'm Renzo Tincopa!</h1>
      <h2 class="text-2xl">Smart Contract Developer</h2>
      <div class="flex justify-end items-center mt-2">
        <span class="text-xl">@tinconomad</span>
        <a
          class="ml-2"
          href="https://www.linkedin.com/in/tinconomad/"
          target="_blank"
          rel="noopener"
        >
          <Badge>Ready for work</Badge>
        </a>
      </div>
    </div>

    <!-- Role Box -->
    <div class="bg-white rounded-xl border-4 border-black p-4">
      <a>soy un div en blanco</a>
    </div>
  </div>
</div>

  <!-- Description Box -->
  <div class="md:col-span-3 md:row-span-1 bg-white rounded-xl border-4 border-black p-4 text-black">
    <p class="text-lg">
      Smart Contract Developer specializing in Solidity, Stacks and integrations
      with Rust, Python and Node.js. Proficient in product development. Innovating
      and facilitating the development of new products. Adept at assisting
      existing products in their seamless transition to the Web 3.0 era, ensuring
      they remain competitive and future-ready in the rapidly evolving blockchain
    </p>
  </div>

  <!-- Social Links -->
  <nav class="space-y-4 lg:flex lg:space-x-4 text-2xl md:text-sm">
    <SocialPill href="https://www.linkedin.com/in/tinconomad/">
      <LinkedInIcon class="size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/TincoNomad">
      <GithubIcon class="size-6" />
      Github
    </SocialPill>
    <SocialPill href="mailto:renzotincopa@icloud.com">
      <MailIcon class="size-6" />
      renzotincopa@icloud.com
    </SocialPill>
  </nav>
</div>